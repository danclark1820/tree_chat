<h1>Chat</h1>

<%= form_for @conn, chat_path(@conn, :create), [as: :chat], fn f -> %>
  <div>
    <%= label f, :topic %>
    <%= text_input f, :topic %>
    <%= error_tag f, :topic %>
  </div>
  <div>
    <%= label f, :description %>
    <%= text_input f, :description %>
    <%= error_tag f, :description%>
  </div>
  <div>
    <%= hidden_input f, :created_by, [value: @conn.assigns[:user_id]] %>
    <%= error_tag f, :user_id %>
  </div>
  <div>
    <%= submit "Submit" %>
  </div>
<% end %>
