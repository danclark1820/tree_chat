<h2>Cooler.Chat<h2>
<h3>Forgot Password</h3>

<%= form_for @conn, Routes.password_path(@conn, :create), [as: :forgot_password], fn f -> %>
  <div>
    <%= text_input f, :email, placeholder: "Email", required: true%>
    <%= error_tag f, :email %>
  </div>
  <div>
    <%= submit "Submit" %>
  </div>
<% end %>
