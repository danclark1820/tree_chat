<h3>cooler.chat/c/ChatTopic</h3>

<%= form_for :chat, chat_path(@conn, :create), [as: :chat], fn f -> %>
  <div>
    Chat topics allow only letters and underscores. No spaces.
  </div>
  <div>
    ex: DevisivePoliticalEventTopic or devisive_political_event_topic
  </div>
  <div>
    <%= text_input f, :topic, placeholder: "ChatTopic", required: true %>
    <%= error_tag f, :topic %>
  </div>
  <div>
    <%= text_input f, :description, placeholder: "Description of chat topic.", required: true %>
    <%= error_tag f, :description%>
  </div>
  <div>
    <%= hidden_input f, :created_by, [value: @conn.assigns[:user_id]] %>
    <%= error_tag f, :user_id %>
  </div>
  <div>
    <%= submit "Submit" %>
  </div>
<% end %>
