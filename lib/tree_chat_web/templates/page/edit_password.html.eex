<h3>Change Username</h3>
<%= form_for @conn, user_path(@conn, :update, id: Plug.Conn.get_session(@conn, :current_user_id)), [as: :user], fn f -> %>
  <%= text_input f, :username, placeholder: "username" %><br>
  <%= password_input f, :password, placeholder: "password" %><br>
  <%= password_input f, :new_password, placeholder: "new_password" %><br>
  <%= submit "Submit" %>
<% end %>
